<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="css/player.css">
        <title>Player Page</title>
    </head>
    <body>
        <header>
            <h4>Football Club</h4>
           <nav>
               <ul>
                   <li>
                       <a id="one" href="/Player">Profile</a>
                   </li>
                   <li>
                       <a id="two" href="/Player/UpcomingMatches">Upcoming Matches</a>
                   </li>
                   <li>
                       <a id="three" href="/Player/MatchHistory">Match History</a>
                   </li>
                   <li>
                       <a id="four" href="/PLayer/CoachDetails">Coach Info</a>
                   </li>
               </ul>
           </nav>
       </header>
       <label for="details" class="C"><u><strong><i>Your Profile</i></strong></u></label>
       <div class="details" name="details">
           <div class="personaldetails" id="A">

               <h5>Username : <%=USERNAME%></h5>
               <h5>Player ID : <%=PLAYER_ID%></h5>
               <div>
                <label id="team_label" for="team">Team :</label>
                <h5 class="team" name="team"><%=TEAM_NAME%></h5>
               </div>
               <div>
                <label id="wins_label" for="wins">Team Wins :</label>
                <h5 class="wins" name="wins"><%=WINS%></h5>
               </div>
             <div>
                <label id="losses_label" for="losses">Team Losses :</label>
                <h5 class="losses" name="losses"><%=LOSSES%></h5>
             </div>
             <div>
                <label id="draws_label" for="draws">Team Draws :</label>
                <h5 class="draws" name="draws"><%=DRAWS%></h5>
             </div>
           </div>
           <div class="personaldetails" id="B">
             <div>
               <label id="name_label" for="name">Full Name :</label>
               <h5 class="name" name="name"><%=NAME%></h5>
            </div>
            <div>
               <label id="dob_label" for="dob">Date of Birth :</label>
               <h5 class="dob" name="dob"><%=DOB%></h5>
            </div>
            <div>
               <label id="clubpts_label" for="clubpts">Club Points :</label>
               <h5 class="clubpts" name="clubpts"><%=CLUBPTS%></h5>
            </div>
            <div>
                <label id="mobile_label" for="mobile">Mobile Numbers :</label>
                <h5 name='mobile'><%=MOBILENO%></h5>
               </div>
               <div>
                <h5 name='email'>Email IDs : <%=EMAIL_ID%></h5>
               </div>
           </div>
       </div>
    </body>
</html>